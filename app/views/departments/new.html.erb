<b style="font-size: 16px;">New Department</b><br /><br />

<%= error_messages_for :department %>

<% form_for(:department, :url => departments_url) do |f| %>
<table>
  <tr>
    <td><b>Name:</b></td> 
    <td><%= f.text_field :name %></td>
  </tr>
  <tr><td>&nbsp</td></tr>
  <tr>
    <td><%= submit_tag "Create" %></td>
    <td><input type=button value="Cancel" onclick="window.location.href='<%= departments_url %>'" /></td>
    <td colspan="2">&nbsp</td>
  </tr>
</table>
<% end %>
