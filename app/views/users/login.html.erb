<% form_for(:user, :url => authenticate_users_url, :html => { :method => :put }) do |f| %>
<table>
  </tr>
    <td><b>Username:</b></td> <td><%= f.text_field :username %></td>
  </tr>
  </tr>
    <td><b>Password:</b></td> <td><%= f.password_field :password %></td>
  </tr>
  <tr><td>&nbsp</td></tr>
  <tr>
    <td>&nbsp</td>
    <td><%= submit_tag("Login") %></td>
  </tr>
</table>
<% end %>