<%= error_messages_for :acl %>

<% form_for(:acl, :url => acl_url(@acl), :html => { :method => :put }) do |f| %>
<table>
  <tr>
    <td><b>Name:</b></td> 
    <td><%= f.text_field :name %></td>
  </tr>
  <tr><td>&nbsp</td></tr>
  <tr>
    <td><%= submit_tag "Update" %></td>
    <td><input type=button value="Cancel" onclick="window.location.href='<%= acl_url(@acl) %>'" /></td>
    <td colspan="2">&nbsp</td>
  </tr>
</table>
<% end %>
