
<b style="font-size: 24px;"><%= @configuration.name %></b><br /><br /><br />

<table  class="index_list">
<tr><td colspan="3" style="border-bottom: 1px solid #000000;"><%= will_paginate @users %></td></tr>
<tr> <th>&nbsp</th> <th>Username</th> <th>Real Name</th> </tr>
<% for user in @users %>
  <% if (@added.has_key?(user.id) ) %>
    <tr class="shaded">
  <% else %>
    <tr class="disabled">
  <% end %>
    <td>
      <% if (@added.has_key?(user.id) ) %>
        <%= link_to( image_tag('checked.png', :border => 'none'), configured_user_url(@added[user.id]), :confirm => "Remove #{user.username} from configuration?", :method => :delete) %>
      <% else %>
        <%= link_to image_tag('unchecked.png', :border => 'none'), {:controller => :configured_users, :action => :add, :user => user.id,
                                                                    :configuration => @configuration.id}, :method => :post %>
      <% end %>
    </td>
    <td><%= user.username %></td>
    <td><%= user.real_name %></td>
  </tr>
<% end %>
<tr><td colspan="3" style="border-top: 1px solid #000000;"><%= will_paginate @users %></td></tr>
</table>

<br /><br /><br />

